<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8E9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo atau Nama Aplikasi -->
        <ImageView
            android:id="@+id/fixuLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fixulogolight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Text "Create Acc" -->
        <TextView
            android:id="@+id/textSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Free Account"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/fixuLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Text "Full Name" -->
        <TextView
            android:id="@+id/textFullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/textSignup"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Input Full Name -->
        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Input Full Name"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/textFullname"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Text "Whatsapp" -->
        <TextView
            android:id="@+id/textWhatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whatsapp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/fullName"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Input Whatsapp -->
        <EditText
            android:id="@+id/whatsapp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Input Whatsapp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#8F8F8F"
            app:layout_constraintTop_toBottomOf="@+id/textWhatsapp"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Text "Email" -->
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/whatsapp"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Input Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Input Email"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/textEmail"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Text "Password" -->
        <TextView
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Input Password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Input Password"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/textPassword"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Text "Confirm Password" -->
        <TextView
            android:id="@+id/textConfirmpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Input Password -->
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Input Confirm Password"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/textConfirmpassword"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Tombol Sign Up -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:text="Sign Up"
            android:textColor="@color/surfacecolor"
            android:backgroundTint="@color/primary"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassword"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Teks Have acc -->
        <TextView
            android:id="@+id/textHaveacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:text="Have account? "
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/signupButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Link Login -->
        <TextView
            android:id="@+id/loginDirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Log in"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@+id/textHaveacc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

